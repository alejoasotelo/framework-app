{% extends "index.twig" %}

{% block title %}Add/Edit Article{% endblock %}

{% block subtitle %}<h1 class="page-header">Add/Edit Article</h1>{% endblock %}

{% block content %}
    <form method="post" action="/autec/www/news/save">
		<h4>Title</h4>
        <input type="text" name="title" value="{{ item.title }}" class="input-xl"/>
        
        <h4>Content</h4>
        <textarea name="raw_body">{{ item.raw_body }}</textarea>
        
        <hr />
        <input type="hidden" name="news_id" value="{{ item.news_id }}" />
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
{% endblock %}
