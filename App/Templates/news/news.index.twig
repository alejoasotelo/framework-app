{% extends "index.twig" %}

{% block title %}News{% endblock %}

{% block subtitle %}<h1 class="page-header">News</h1>{% endblock %}

{% block content %}
    {% if items %}
        <div class="row-fluid">
            {% for item in items %}
                <div class="span4">
                    <h3>
                        {{ item.title }}
                        {% if user.id %}
                            <span class="pull-right">
                                <a class="btn btn-small btn-default" href="{{ uri.base.path }}news/edit/{{ item.news_id }}">
                                    <span class="glyphicon glyphicon-edit"></span> Edit
                                </a>
                            </span>
                        {% endif %}
                    </h3>

                    <p>{{ item.formatted_body|raw }}</p>
                    <hr />
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row-fluid">
            <div class="span4">
                <h3>News Heading 1</h3>

                <p>The body of this news article goes here. This would pull from your database of articles.</p>
                <a href="#" class="btn">Read Article</a>
            </div>

            <div class="span4">
                <h3>News Heading 2</h3>

                <p>The body of this news article goes here. This would pull from your database of articles.</p>
                <a href="#" class="btn">Read Article</a>
            </div>

            <div class="span4">
                <h3>News Heading 3</h3>

                <p>The body of this news article goes here. This would pull from your database of articles.</p>
                <a href="#" class="btn">Read Article</a>
            </div>
        </div>
    {% endif %}
{% endblock %}
